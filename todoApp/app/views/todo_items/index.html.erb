<p id="notice"><%= notice %></p>

<h1>DO THE THING!</h1>

<table>
  <thead>
    <tr>
      <th>About The Thing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description %></td>
        <td><%= link_to 'See the Thing', todo_item %></td>
      </tr>
      <tr>
        <td><%= link_to 'Change the Thing', edit_todo_item_path(todo_item) %></td>
        <td><%= link_to 'End the Thing', todo_item, method: :delete, data: { confirm: 'You really wanna end the thing?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Make a Thing!', new_todo_item_path %>
